<%= form_for(@becario, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @becario.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@becario.errors.count, "error") %> impidi√≥ que el/la becario se guardara:</h4>

      <ul>
      <% @becario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :condonacion_beneficiarios, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
