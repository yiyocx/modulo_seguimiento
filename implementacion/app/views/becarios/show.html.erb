  <dd><%= @becario.registro_pasantia %></dd>

</dl>

<%= link_to informes_anuales_condonacion_becario_path(@becario), :class => 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-pencil"></span>
  Seguimiento a Becarios - Informes anuales para condonación
<% end %>
