<%= form_for(@desembolso, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @desembolso.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@desembolso.errors.count, "error") %> impidi√≥ que el/la desembolso se guardara:</h4>

      <ul>
      <% @desembolso.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :estado, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :estado, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_solicitud, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fecha_solicitud, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valor, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :valor, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :girado, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :girado, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_giro, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fecha_giro, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :condiciones, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :condiciones, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :proyecto, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :proyecto, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
