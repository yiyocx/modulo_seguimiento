<%= form_for(@evaluacion, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @evaluacion.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@evaluacion.errors.count, "error") %> impidi√≥ que el/la evaluacion se guardara:</h4>

      <ul>
      <% @evaluacion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :porc_sugerido_condonacion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :porc_sugerido_condonacion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :concepto, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :concepto, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :evaluador, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :evaluador, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :informe, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :informe, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
