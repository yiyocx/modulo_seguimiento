<div class="page-header">
  <%= link_to new_evaluacion_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Evaluacion
  <% end %>
  <h1>Lista de evaluacions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Porc sugerido condonacion</th>
            <th>Concepto</th>
            <th>Evaluador</th>
            <th>Informe</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @evaluacions) do |evaluacion| %>
            <td><%= evaluacion.porc_sugerido_condonacion %></td>
            <td><%= evaluacion.concepto %></td>
            <td><%= evaluacion.evaluador %></td>
            <td><%= evaluacion.informe %></td>
            <td><%= link_to 'Ver', evaluacion %></td>
        <td><%= link_to 'Editar', edit_evaluacion_path(evaluacion) %></td>
        <td><%= link_to 'Eliminar', evaluacion, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
