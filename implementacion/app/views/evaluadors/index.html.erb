<div class="page-header">
      <%= link_to new_evaluador_path, :class => 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        Nuevo Evaluador
      <% end %>
  <h1>Lista de evaluadores</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Id</th>
            <th>√Årea de Conocimiento</th>
            <th>Fecha Inicial</th>
            <th>Fecha Final</th>
            <th>Nombre</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @evaluadors) do |evaluador| %>
            <td><%= evaluador.id %></td>
            <td><%= evaluador.area_conocimiento %></td>
            <td><%= evaluador.fecha_inicial %></td>
            <td><%= evaluador.fecha_final %></td>
            <td><%= evaluador.nombre %></td>
            <td><%= link_to 'Ver', evaluador %></td>
        <td><%= link_to 'Editar', edit_evaluador_path(evaluador) %></td>
        <td><%= link_to 'Eliminar', evaluador, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
