<%= form_for(@informe, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @informe.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@informe.errors.count, "error") %> impidi√≥ que el/la informe se guardara:</h4>

      <ul>
      <% @informe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :descripcion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :descripcion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :es_final, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :es_final, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fecha, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tipo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :tipo, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :document, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :document, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
