<div class="page-header">
  <%= link_to new_informe_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Informe
  <% end %>
  <h1>Lista de informes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Descripcion</th>
            <th>Es final</th>
            <th>Fecha</th>
            <th>Tipo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @informes) do |informe| %>
            <td><%= informe.descripcion %></td>
            <td><%= informe.es_final %></td>
            <td><%= informe.fecha %></td>
            <td><%= informe.tipo %></td>
            <td><%= link_to 'Ver', informe %></td>
        <td><%= link_to 'Editar', edit_informe_path(informe) %></td>
        <td><%= link_to 'Eliminar', informe, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
