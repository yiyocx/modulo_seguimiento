<h2>Evaluar Propuesta</h2>

<dl class="dl-horizontal">
  <dt>Numero:</dt>
  <dd><%= @propuesta.numero %></dd>

  <dt>Nombre:</dt>
  <dd><%= @propuesta.nombre %></dd>

  <dt>Estado:</dt>
  <dd><%= @propuesta.estado %></dd>

  <dt>Proyecto:</dt>
  <dd><%= @propuesta.proyecto.titulo %></dd>


  <dt>Documento del informe</dt>
  <dd><%= link_to 'Descargar formato', @propuesta.evaluacion.informe.document.url(:original, false), target: '_blank' %>
  </dd>
  <%= form_for :informes, url: url_for( :controller => :propuestas, :action => :procesar_evaluacion_propuesta ), method: :patch do |f| %>
    <dt>Cargar:</dt>
    <dd><%= f.file_field :document %></dd><br>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn" %>
      </div>
    </div>
  <% end %>

</dl>
