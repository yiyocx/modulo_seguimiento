<div class="page-header">
  <%= link_to new_propuesta_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Propuesta
  <% end %>
  <h1>Lista de propuestas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Numero</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Proyecto</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @propuestas) do |propuesta| %>
            <td><%= propuesta.numero %></td>
            <td><%= propuesta.nombre %></td>
            <td><%= propuesta.estado %></td>
            <td><%= propuesta.proyecto %></td>
            <td><%= link_to 'Ver', propuesta %></td>
        <td><%= link_to 'Editar', edit_propuesta_path(propuesta) %></td>
        <td><%= link_to 'Eliminar', propuesta, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
