<%= form_for(@proyecto, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @proyecto.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@proyecto.errors.count, "error") %> impidi√≥ que el/la proyecto se guardara:</h4>

      <ul>
      <% @proyecto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :duracion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :duracion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :estado, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :linea_tematica, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :linea_tematica, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lugar_ejecucion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :lugar_ejecucion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :titulo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :titulo, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
