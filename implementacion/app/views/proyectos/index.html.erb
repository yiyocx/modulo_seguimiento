<div class="page-header">
  <%= link_to new_proyecto_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Proyecto
  <% end %>
  <h1>Lista de proyectos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Duracion</th>
            <th>Estado</th>
            <th>Linea tematica</th>
            <th>Lugar ejecucion</th>
            <th>Titulo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @proyectos) do |proyecto| %>
            <td><%= proyecto.duracion %></td>
            <td><%= proyecto.estado %></td>
            <td><%= proyecto.linea_tematica %></td>
            <td><%= proyecto.lugar_ejecucion %></td>
            <td><%= proyecto.titulo %></td>
            <td><%= link_to 'Ver', proyecto %></td>
        <td><%= link_to 'Editar', edit_proyecto_path(proyecto) %></td>
        <td><%= link_to 'Eliminar', proyecto, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
