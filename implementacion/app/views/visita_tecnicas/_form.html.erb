<%= form_for(@visita_tecnica, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @visita_tecnica.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@visita_tecnica.errors.count, "error") %> impidi√≥ que el/la visita_tecnica se guardara:</h4>

      <ul>
      <% @visita_tecnica.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :observacion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :observacion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :porc_cumplimiento, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :porc_cumplimiento, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tipo_proyeccion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :tipo_proyeccion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
